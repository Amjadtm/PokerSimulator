<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:padding="20sp"
    tools:context=".IndexPageFragment">

    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="350sp"
        android:layout_height="250sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:contentDescription="Logo" />
    <RelativeLayout
        android:id="@+id/info_lay"
        android:layout_below="@+id/logo_main"
        android:layout_above="@id/buttons_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_index_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/index_fragment_header"
            android:textSize="15sp"
            android:textColor="#FCF9AC" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/buttons_lay"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/button_create_room"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:src="@drawable/btn_create_room"
            android:contentDescription="button_create_room" />

        <ImageView
            android:id="@+id/button_join_room"
            android:layout_width="250sp"
            android:layout_height="80sp"
            android:src="@drawable/btn_join_existing_room"
            android:layout_below="@+id/button_create_room"
            android:contentDescription="button_join_room" />
    </RelativeLayout>
</RelativeLayout>
